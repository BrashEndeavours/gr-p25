<?xml version="1.0"?>
<block>
  <name>HDF5 Source</name>
  <key>thesis_hdf5_source_x</key>
	<category>[Thesis]</category>
	<import>import thesis
import logging</import>

	<make>thesis.hdf5_source_$(type.fcn)(
num_outputs=$num_outputs,
dataset_name=$dataset_name,
data_filename=$data_filename,
log_level=$log_level, 
log_filename=$log_filename
)</make>

		
	<param>
		<name>IO Type</name>
		<key>type</key>
		<type>enum</type>
		<option>
			<name>Float</name>
			<key>float</key>
			<opt>fcn:f</opt>
		</option>
		<option>
			<name>Int</name>
			<key>int</key>
			<opt>fcn:i</opt>
		</option>
		<option>
			<name>Short</name>
			<key>short</key>
			<opt>fcn:s</opt>
		</option>
		<option>
			<name>Byte</name>
			<key>byte</key>
			<opt>fcn:b</opt>
		</option>
	</param>

	<param>
		<name>Num Outputs</name>
		<key>num_outputs</key>
		<value>1</value>
		<type>int</type>
	</param>

  <param>
		<name>Dataset Name</name>
		<key>dataset_name</key>
		<value>'dataset'</value>
		<type>string</type>
	</param>

	<param>
		<name>Datafile</name>
		<key>data_filename</key>
		<value></value>
		<type>file_save</type>
		<hide>none</hide>
	</param>

	<param>
		<name>Logging Level</name>
		<key>log_level</key>
		<value>logging.NOTSET</value>
		<type>int</type>
		<hide>#if str($log_level) == 'logging.NOTSET' then 'part' else 'none'#</hide>
		<option>
			<name>Disable</name>
			<key>logging.NOTSET</key>
		</option>
		<option>
			<name>Debug</name>
			<key>logging.DEBUG</key>
		</option>
		<option>
			<name>Informational</name>
			<key>logging.INFO</key>
		</option>
		<option>
			<name>Warning</name>
			<key>logging.WARNING</key>
		</option>
		<option>
			<name>Error</name>
			<key>logging.ERROR</key>
		</option>
		<option>
			<name>Critical</name>
			<key>logging.CRITICAL</key>
		</option>
	</param>
	
	<param>
		<name>Logfile</name>
		<key>log_filename</key>
		<value></value>
		<type>file_save</type>
		<hide>#if str($log_level) == 'logging.NOTSET' then 'part' else 'none'#</hide>
	</param>

	<check>$num_outputs &gt; 0</check>
  	<check>$dataset_name != ''</check>
  	<check>$data_filename != ''</check>

	<source>
		<name>out</name>
		<type>$type</type>
		<nports>$num_inputs</nports>
	</source>
</block>
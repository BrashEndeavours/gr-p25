<?xml version="1.0"?>
<block>
  <name>P25 Frequency Demodulator</name>
  <key>thesis_p25_freq_demod_cf</key>
  <category>[Thesis]</category>
  <import>import thesis</import>
  <make>thesis.p25_freq_demod_cf(
  sample_rate=$sample_rate,
  max_amplitude=$max_amplitude,
  max_deviation=$max_deviation,
  gain_adjust=$gain_adjust,
  verbose=$verbose,
  log=$log
  )</make>

  <callback>set_max_amplitude($max_amplitude)</callback>
  <callback>set_max_deviation($max_deviation)</callback>
  <callback>set_gain_adjust($gain_adjust)</callback>

  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <value>48000</value>
    <type>int</type>
  </param>

  <param>
    <name>Max Amplitude</name>
    <key>max_amplitude</key>
    <value>4.38895</value>
    <type>float</type>
  </param>

  <param>
    <name>Max Deviation</name>
    <key>max_deviation</key>
    <value>2827</value>
    <type>int</type>
  </param>

  <param>
    <name>Gain Adjustment</name>
    <key>gain_adjust</key>
    <value>1.0</value>
    <type>float</type>
  </param>

  <param>
		<name>Verbose</name>
		<key>verbose</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($verbose) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

  <param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($log) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>

<?xml version="1.0"?>
<block>
  <name>P25 RX Nyquist Filter</name>
  <key>p25_rx_nyquist_filter_ff</key>
  <category>[Thesis]/P25</category>
  <import>import p25</import>
  <make>p25.rx_nyquist_filter_ff(
    filter_gain=$filter_gain,
    sample_rate=$sample_rate,
    symbol_rate=$symbol_rate,
    span=$span,
    verbose=$verbose,
    log=$log
  )</make>

  <callback></callback>

  <param>
    <name>Gain</name>
    <key>filter_gain</key>
    <value>1.0</value>
    <type>real</type>
  </param>
  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <value>48000</value>
    <type>int</type>
  </param>
  <param>
    <name>Symbol Rate</name>
    <key>symbol_rate</key>
    <value>4800</value>
    <type>int</type>
  </param>
  <param>
    <name>Filter Symbol Span</name>
    <key>span</key>
    <value>11</value>
    <type>int</type>
  </param>
  <param>
		<name>Verbose</name>
		<key>verbose</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($verbose) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

  <param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($log) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
<?xml version="1.0"?>
<block>
  <name>Bitstream Corpus Generator</name>
  <key>thesis_bitstream_corpus_b</key>
  <category>[Thesis]</category>
  <import>import thesis</import>
  <import>import logging</import>

  <make>thesis.bitstream_corpus_b(
    min_value=$min_value,
    max_value=$max_value,
    value_range=$value_range,
    seq_length=$seq_length,
    repeat=$repeat,
    shuffle=$shuffle,
    log_level=$log_level,
    filename=$filename,
    flush_bytes=$flush_bytes
)</make>

  <callback>set_min_value($min_value)</callback>
  <callback>set_max_value($max_value)</callback>
  <callback>set_value_range($value_range)</callback>
  <callback>set_seq_length($seq_length)</callback>

  <param>
    <name>Min Value</name>
    <key>min_value</key>
    <value>0</value>
    <type>int</type>
  </param>

  <param>
    <name>Max Value</name>
    <key>max_value</key>
    <value>3</value>
    <type>int</type>
  </param>

  <param>
    <name>Value Range</name>
    <key>value_range</key>
    <value>[]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>Sequence Length</name>
    <key>seq_length</key>
    <value>8</value>
    <type>int</type>
  </param>

  <param>
    <name>Flush Bytes</name>
    <key>flush_bytes</key>
    <value>0</value>
    <type>int</type>
  </param>

  <param>
		<name>Shuffle</name>
		<key>shuffle</key>
		<value>False</value>
		<type>bool</type>
    <hide>#if str($shuffle) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
  </param>

  <param>
		<name>Repeat</name>
		<key>repeat</key>
		<value>False</value>
		<type>bool</type>
    <hide>#if str($repeat) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
  </param>

  <param>
		<name>Logging Level</name>
		<key>log_level</key>
    <value>logging.NOTSET</value>
		<type>int</type>
		<hide>#if str($log_level) == 'logging.NOTSET' then 'part' else 'none'#</hide>
		<option>
			<name>Disable</name>
			<key>logging.NOTSET</key>
		</option>
		<option>
			<name>Debug</name>
			<key>logging.DEBUG</key>
		</option>
		<option>
			<name>Informational</name>
			<key>logging.INFO</key>
		</option>
		<option>
			<name>Warning</name>
			<key>logging.WARNING</key>
		</option>
		<option>
			<name>Error</name>
			<key>logging.ERROR</key>
		</option>
		<option>
			<name>Critical</name>
			<key>logging.CRITICAL</key>
		</option>
	</param>

  <param>
    <name>Logfile</name>
    <key>filename</key>
    <value></value>
    <type>file_save</type>
    <hide>#if str($log_level) == 'logging.NOTSET' then 'part' else 'none'#</hide>
  </param>

  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
